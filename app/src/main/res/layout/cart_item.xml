<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <ImageView
        android:id="@+id/productImg"
        android:layout_width="100dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Title"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/productImg"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/productImg"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/colorTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:layout_below="@id/price"
        android:layout_toRightOf="@id/productImg"
        android:layout_alignParentRight="false"
        />

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:layout_below="@id/price"
        android:layout_toRightOf="@id/colorTag"
        android:layout_alignParentRight="false"
        />

    <TextView
        android:id="@+id/sizeTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:layout_below="@id/colorTag"
        android:layout_toRightOf="@id/productImg"
        android:layout_alignParentRight="false"
        />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:layout_below="@id/color"
        android:layout_toRightOf="@id/sizeTag"
        android:layout_alignParentRight="false"
        />


    <ImageButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/baseline_add_24"
        android:layout_below="@id/sizeTag"
        android:layout_toRightOf="@id/productImg"
        />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_below="@id/size"
        android:layout_toRightOf="@id/add"
        android:layout_margin="5dp"
        android:textSize="30sp"
        />

    <ImageButton
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/baseline_remove_24"
        android:layout_below="@id/size"
        android:layout_toRightOf="@id/quantity"
        />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/size"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/baseline_delete_24" />


</RelativeLayout>